import cv2
import numpy as np
import matplotlib as plt

cam = cv2.VideoCapture(0)

while(True):
    ret, frame = cam.read()
    gray = cv2.cvtColor(frame , cv2.COLOR_BGR2GRAY)
    cv2.imshow('frame',gray)
    if cv2.waitkey(1)  & 0xFF == ord('q') :
        break
        
        
cam.release()
cv2.destroyAllWindows()
        
